<h1>Admin Dashboard</h1>
<h2> Welcome, <%= @user.username %></h2>
<%= link_to "Update Account Information", edit_user_path %><br>

<div class="btn-group">
  <button type="button" class="btn btn-default" id="all">All Orders</button>
  <button type="button" class="btn btn-default" id="ordered">Ordered</button>
  <button type="button" class="btn btn-default" id="paid">Paid</button>
  <button type="button" class="btn btn-default" id="cancelled">Cancelled</button>
  <button type="button" class="btn btn-default" id="completed">Completed</button>
</div>

<table class="table hidden" id="all_orders">
  <th>Order Number</th>
  <th>Order Status</th>

<% @orders.each do |order| %>
  <tr>
    <td><%= link_to order.id, order_path(order) %></td>
    <td><%= order.status %></td>
  </tr>
<% end %>
</table>

<table class="table hidden" id="ordered_orders">
  <th>Order Number</th>

<% @orders.each do |order| %>
  <tr>
    <td><%= link_to order.id, order_path(order) %></td>
  </tr>
<% end %>
</table>

<table class="table hidden" id="paid_orders">
  <th>Order Number</th>

<% @orders.each do |order| %>
  <tr>
    <td><%= link_to order.id, order_path(order) %></td>
  </tr>
<% end %>
</table>

<table class="table hidden" id="cancelled_orders">
  <th>Order Number</th>

<% @orders.each do |order| %>
