  </tr>
<% end %>
</table>

<table class="table hidden" id="completed_orders">
  <th>Order Number</th>

<% @orders.each do |order| %>
  <tr>
    <td><%= link_to order.id, order_path(order) %></td>
  </tr>
<% end %>
</table>



<table class="table" id="status_table">
  <th>Status</th>
  <th>Total Orders</th>
  <tr>
    <td>Ordered</td>
    <td id="ordered"><%= @orders.total("ordered") %></td>
  </tr>
  <tr>
    <td> Paid </td>
    <td id="paid"><%= @orders.total("paid") %></td>
  </tr>
  <tr>
    <td> Cancelled </td>
    <td id="cancelled"><%= @orders.total("cancelled") %></td>
  </tr>
  <tr>
    <td> Completed </td>
      <td id="completed"><%= @orders.total("completed") %></td>
  </tr>
</table>
